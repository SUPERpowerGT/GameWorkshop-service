<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gameworkshop.domain.project.repository.DeveloperProfileMapper">

    <resultMap id="BaseResultMap" type="com.gameworkshop.domain.project.model.DeveloperProfile">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="project_count" property="projectCount"/>
    </resultMap>

    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT id, user_id, project_count
        FROM developer_profile
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.gameworkshop.domain.project.model.DeveloperProfile">
        INSERT INTO developer_profile (id, user_id, project_count)
        VALUES (#{id}, #{userId}, #{projectCount})
    </insert>
</mapper>